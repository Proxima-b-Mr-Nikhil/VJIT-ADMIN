<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_marginTop="0dp"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <ScrollView
        android:layout_marginTop="0dp"
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="UselessParent">
        <LinearLayout
            android:id="@+id/mlout"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_marginTop="0dp"
                android:background="@color/colorPrimary"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:orientation="horizontal">

                <TextView

                    android:layout_marginStart="8dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginBottom="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:text="@string/welcome_to_vjit_ece"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"/>

            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                app:cardCornerRadius="15dp"
                android:layout_marginTop="-130dp"

                android:layout_marginBottom="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"

                app:contentPadding="15dp"
                app:cardElevation="2dp"
                app:cardMaxElevation="3dp"

                android:layout_height="match_parent">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_margin="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:orientation="horizontal"

                        android:weightSum="3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:baselineAligned="false">

                        <LinearLayout

                            android:id="@+id/feed"
                            android:clickable="true"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:focusable="true">

                            <ImageView
                                android:scaleType="fitXY"
                                android:src="@drawable/feed"
                                android:clickable="false"
                                android:layout_width="50dp"
                                android:layout_height="51dp"
                                android:layout_gravity="center_horizontal"
                                android:layout_margin="5dp"

                                android:padding="10dp"
                                android:contentDescription="@string/todo" />
                            <RelativeLayout
                                android:layout_marginTop="4dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:clickable="false"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="5dp"
                                    android:gravity="center_horizontal"
                                    android:text="@string/feed"

                                    android:textColor="@android:color/black" />

                            </RelativeLayout>


                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/syllabi"
                            android:clickable="true"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:focusable="true">

                            <ImageView
                                android:layout_marginTop="2dp"
                                android:src="@drawable/syllabi"
                                android:scaleType="fitXY"
                                android:clickable="false"
                                android:layout_width="45dp"
                                android:layout_height="41dp"
                                android:layout_gravity="center_horizontal"
                                android:layout_margin="5dp"
                                android:contentDescription="@string/todo" />
                            <RelativeLayout
                                android:layout_marginTop="13dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:clickable="false"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="5dp"
                                    android:gravity="center_horizontal"
                                    android:text="@string/syllabi"

                                    android:textColor="@android:color/black" />

                            </RelativeLayout>

                        </LinearLayout>


                        <LinearLayout
                            android:id="@+id/circular"
                            android:layout_width="0dp"
                            android:clickable="true"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:focusable="true">

                            <ImageView

                                android:src="@drawable/circular"
                                android:scaleType="fitXY"
                                android:layout_gravity="center_horizontal"

                                android:clickable="false"
                                android:layout_width="45dp"
                                android:layout_height="45dp"
                                android:layout_margin="5dp"
                                android:contentDescription="@string/todo" />
                            <RelativeLayout
                                android:layout_marginTop="7dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:clickable="false"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="5dp"
                                    android:gravity="center_horizontal"
                                    android:text="@string/circular"

                                    android:textColor="@android:color/black" />

                            </RelativeLayout>

                        </LinearLayout>


                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="3"
                        android:baselineAligned="false">

                        <LinearLayout
                            android:id="@+id/timetable"
                            android:clickable="true"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:focusable="true">

                            <ImageView
                                android:scaleType="fitXY"
                                android:src="@drawable/timetable"
                                android:clickable="false"
                                android:layout_width="55dp"
                                android:layout_height="60dp"
                                android:layout_marginTop="5dp"
                                android:layout_gravity="center_horizontal"
                                android:layout_margin="5dp"
                                android:padding="10dp"
                                android:contentDescription="@string/todo" />

                            <RelativeLayout
                                android:layout_marginTop="6dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:clickable="false"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="5dp"
                                    android:gravity="center_horizontal"
                                    android:text="@string/time_table"

                                    android:textColor="@android:color/black" />

                            </RelativeLayout>

                        </LinearLayout>




                        <LinearLayout
                            android:id="@+id/examdates"
                            android:clickable="true"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:focusable="true">

                            <ImageView
                                android:scaleType="fitXY"
                                android:clickable="false"
                                android:src="@drawable/examdates"
                                android:layout_width="55dp"
                                android:layout_height="58dp"
                                android:layout_gravity="center_horizontal"
                                android:layout_margin="5dp"

                                android:padding="10dp"
                                android:contentDescription="@string/todo" />

                            <RelativeLayout
                                android:layout_marginTop="4dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:clickable="false"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="5dp"
                                    android:gravity="center_horizontal"
                                    android:text="@string/exam_dates"

                                    android:textColor="@android:color/black" />

                            </RelativeLayout>

                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/attendance"
                            android:clickable="true"

                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:focusable="true">

                            <ImageView
                                android:layout_width="61dp"
                                android:layout_height="51dp"
                                android:layout_gravity="center_horizontal"
                                android:layout_margin="5dp"

                                android:scaleType="fitXY"
                                android:src="@drawable/attendence"
                                android:clickable="false"
                                android:padding="10dp"
                                android:contentDescription="@string/todo" />

                            <TextView
                                android:clickable="false"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="5dp"
                                android:gravity="center_horizontal"
                                android:text="@string/attendance"
                                android:textColor="@android:color/black" />

                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="3"
                        android:baselineAligned="false">
                        <LinearLayout
                            android:id="@+id/examhallallotment"
                            android:clickable="true"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:focusable="true">
                            <ImageView
                                android:layout_width="81dp"
                                android:layout_height="51dp"
                                android:layout_gravity="center_horizontal"
                                android:layout_margin="5dp"

                                android:scaleType="fitXY"
                                android:src="@drawable/examhall"
                                android:clickable="false"
                                android:padding="10dp"
                                android:contentDescription="@string/todo" />

                            <TextView
                                android:clickable="false"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="5dp"
                                android:gravity="center_horizontal"
                                android:text="@string/exam_hall_allotment"
                                android:textColor="@android:color/black" />

                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/msg"
                            android:clickable="true"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:focusable="true">
                            <ImageView
                                android:layout_width="71dp"
                                android:layout_height="51dp"
                                android:layout_gravity="center_horizontal"
                                android:layout_margin="5dp"

                                android:scaleType="fitXY"
                                android:src="@drawable/broadcastmsg"
                                android:clickable="false"
                                android:padding="10dp"
                                android:contentDescription="@string/todo" />

                            <TextView
                                android:clickable="false"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="5dp"
                                android:gravity="center_horizontal"
                                android:text="Broadcast Message"
                                android:textColor="@android:color/black" />

                        </LinearLayout>


                        <LinearLayout
                            android:id="@+id/contactus"
                            android:clickable="true"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:focusable="true">

                            <ImageView
                                android:layout_width="61dp"
                                android:layout_height="55dp"
                                android:layout_gravity="center_horizontal"
                                android:layout_margin="5dp"

                                android:scaleType="fitXY"
                                android:src="@drawable/contacts"
                                android:clickable="false"
                                android:padding="10dp"
                                android:contentDescription="@string/todo" />

                            <TextView
                                android:clickable="false"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="5dp"
                                android:gravity="center_horizontal"
                                android:text="@string/contact_us"
                                android:textColor="@android:color/black" />
                        </LinearLayout>


                    </LinearLayout>




                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="3"
                        android:baselineAligned="false">

                        <LinearLayout
                            android:id="@+id/imageflipper"
                            android:clickable="true"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:focusable="true">
                            <ImageView
                                android:layout_width="61dp"
                                android:layout_height="61dp"
                                android:layout_gravity="center_horizontal"
                                android:layout_margin="5dp"

                                android:scaleType="fitXY"
                                android:src="@drawable/ic_baseline_photo_library_24"
                                android:clickable="false"
                                android:padding="10dp"
                                android:contentDescription="@string/todo" />

                            <TextView
                                android:clickable="false"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="5dp"
                                android:gravity="center_horizontal"
                                android:text="Image Flipper"
                                android:textColor="@android:color/black" />

                        </LinearLayout>
                        <LinearLayout
                            android:layout_marginTop="10dp"
                            android:id="@+id/dr"
                            android:clickable="true"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:focusable="true"
                            tools:ignore="UselessParent">

                            <ImageView

                                android:scaleType="fitXY"
                                android:src="@drawable/bus"
                                android:clickable="false"
                                android:layout_width="48dp"
                                android:layout_height="51dp"
                                android:layout_gravity="center_horizontal"
                                android:layout_margin="5dp"
                                android:contentDescription="@string/todo" />
                            <TextView
                                android:layout_marginTop="20dp"
                                android:clickable="false"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="5dp"
                                android:gravity="center_horizontal"
                                android:text="@string/driver_route"
                                android:textColor="@android:color/black" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_marginTop="10dp"
                            android:id="@+id/aboutus"
                            android:clickable="true"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:focusable="true"
                            tools:ignore="UselessParent">

                            <ImageView

                                android:scaleType="fitXY"
                                android:src="@drawable/ic_baseline_group_24"
                                android:clickable="false"
                                android:layout_width="48dp"
                                android:layout_height="51dp"
                                android:layout_gravity="center_horizontal"
                                android:layout_margin="5dp"
                                android:contentDescription="@string/todo" />
                            <TextView
                                android:layout_marginTop="20dp"
                                android:clickable="false"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="5dp"
                                android:gravity="center_horizontal"
                                android:text="@string/about_us"
                                android:textColor="@android:color/black" />
                        </LinearLayout>

                    </LinearLayout>




                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- other parts -->




            <TextView
                android:id="@+id/quot"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="8dp"
                android:text="@string/quot"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:layout_marginEnd="10dp" />

        </LinearLayout>
    </ScrollView>
</FrameLayout>
